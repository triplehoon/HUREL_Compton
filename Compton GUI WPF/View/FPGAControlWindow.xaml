                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_15, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
