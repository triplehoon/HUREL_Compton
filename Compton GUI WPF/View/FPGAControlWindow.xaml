                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_3, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>



                            <syncfusion:SfTextInputLayout Hint="Channel 4" Grid.Column="0" Grid.Row="1"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_4, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 5" Grid.Column="1" Grid.Row="1"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_5, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 6" Grid.Column="2" Grid.Row="1"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_6, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 7" Grid.Column="3" Grid.Row="1"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_7, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>


                            <syncfusion:SfTextInputLayout Hint="Channel 8" Grid.Column="0" Grid.Row="2"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_8, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 9" Grid.Column="1" Grid.Row="2"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_9, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 10" Grid.Column="2" Grid.Row="2"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_10, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 11" Grid.Column="3" Grid.Row="2"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_11, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>

                            <syncfusion:SfTextInputLayout Hint="Channel 12" Grid.Column="0" Grid.Row="3"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_12, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 13" Grid.Column="1" Grid.Row="3"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_13, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
                                            <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </syncfusion:SfTextInputLayout>
                            <syncfusion:SfTextInputLayout Hint="Channel 14" Grid.Column="2" Grid.Row="3"
                                                          ContainerType="Filled" VerticalAlignment="Bottom" Margin="5,5,5,5" HelperTextVisibility="Hidden" >
                                <TextBox FontSize="15" Text="{Binding BaselineTrigger_14, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewTextInput">
