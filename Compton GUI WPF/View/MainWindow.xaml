<Window x:Class="Compton_GUI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compton_GUI_WPF"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:VM="clr-namespace:Compton_GUI_WPF.ViewModel"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Metro}"        
        >

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <mvvm:EventToCommand Command="{Binding MianWindowCloseCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <VM:BoolToStringConverter x:Key="ConvStartOrStop" FalseValue="Start Session" TrueValue="Stop Session"/>
        <VM:TimespaneToStringConverter x:Key="ConvTimeSpanToStr"/>
        <Style TargetType="TextBlock" x:Key="TextBlockTitle">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TextBlockTitle2">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="DarkSlateGray"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="defaultButtonStyle">
           
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="ButtonDesignHYU" BasedOn="{StaticResource defaultButtonStyle}">
            <Setter Property="Background" Value="#FF00457E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

    </Window.Resources>

    <Grid Background="#FFEAEAEA">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2">
            <Border Margin="20,20,20,0" Background="White" CornerRadius="10,10,10,10" >
                <StackPanel Margin="15,10,10,10">
                    <TextBlock Text="Connect" Style="{StaticResource TextBlockTitle}"/>
                    <TextBlock Text="USB Devices" Style="{StaticResource TextBlockTitle2}"/>
                    <ComboBox Margin="0,5,5,5" 
                                            SelectedValue="{Binding SelectDevice}"
                                            ItemsSource="{Binding DeviceInfos}"
                                            DisplayMemberPath="DeviceName">
                    </ComboBox>
                    <TextBlock Text="Status:" Style="{StaticResource TextBlockTitle2}"/>
                    <TextBlock Text="{Binding VMStatus}"/>
                    <Button Command="{Binding StartorStopSessionCommand}"
                        Style="{StaticResource ButtonDesignHYU}" IsEnabled="{Binding IsSessionAvailable}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <syncfusion:SfBusyIndicator  IsBusy="{Binding IsSessionStart}" 
                                ViewboxHeight="15"
                                AnimationType="DoubleRing" Foreground="White" ViewboxWidth="20">
                                    <syncfusion:SfBusyIndicator.Background>
                                        <SolidColorBrush Color="#FF00457E" Opacity="0.0"/>
                                    </syncfusion:SfBusyIndicator.Background>
                                </syncfusion:SfBusyIndicator>
                                <TextBlock Text="{Binding Path=IsSessionStart, Converter={StaticResource ConvStartOrStop}}" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Record Time: " Style="{StaticResource TextBlockTitle}" />
                        <TextBlock Text="{Binding Path=RecordTimeSpan, Converter={StaticResource ConvTimeSpanToStr}}" 
                               Style="{StaticResource TextBlockTitle}"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Setting Time: " Style="{StaticResource TextBlockTitle}" />
                        <TextBlock Text="{Binding Path=MeasurementTimeSpan, Converter={StaticResource ConvTimeSpanToStr}}"
                                   Style="{StaticResource TextBlockTitle}"/>

                    </StackPanel>



                </StackPanel>
            </Border>
            <Border Margin="20,20,20,0" Background="White" CornerRadius="10,10,10,10" >
                <StackPanel Margin="15,10,10,10">
                    <TextBlock Text="Setting" Style="{StaticResource TextBlockTitle}"/>
                    <syncfusion:SfTextInputLayout Margin="0,10,0,0"
                        Hint="Mesurement Time" HelperText="In Seconds" ContainerType="Filled" IsEnabled="{Binding !IsSessionStart}">
                        <TextBox FontSize="15" Text="{Binding MeasurementTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewTextInput">
                                    <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </syncfusion:SfTextInputLayout>
                    <syncfusion:SfTextInputLayout Hint="File Name"
                                                          ContainerType="Filled" HelperText="*.bin" Margin="0,10,0,10" >
                        <TextBox FontSize="15" Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </syncfusion:SfTextInputLayout>
                    <Button Content="FPGA Configuration" Style="{StaticResource ButtonDesignHYU}"
                            Command="{Binding OpenFPGAWindowCommand}" IsEnabled="{Binding IsEnableOpenFPGAWindow}"/>


                </StackPanel>
            </Border>

        </StackPanel>


    </Grid>
</Window>
