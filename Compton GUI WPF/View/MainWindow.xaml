                                    </syncfusion:SfBusyIndicator>
                                    <TextBlock Text="{Binding Path=IsSessionStart, Converter={StaticResource ConvStartOrStop}}" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" FontSize="25"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>-->
                    </Grid>


                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Acquisition Time Setting" Style="{StaticResource TextBlockTitle}" Margin="5" />

                        <syncfusion:SfTextInputLayout Grid.Row="1" Margin="5"
                        Hint="Mesurement Time" HelperText="In Seconds" ContainerType="Filled" IsEnabled="{Binding IsSesstionStop}">
                            <TextBox FontSize="15" Text="{Binding MeasurementTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewTextInput">
                                        <mvvm:EventToCommand Command="{Binding TBPrivewTextInputOnlyNumericCommand}" PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </syncfusion:SfTextInputLayout>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Record Time: " Style="{StaticResource TextBlockTitle}" />
                            <TextBlock Text="{Binding Path=RecordTimeSpan, Converter={StaticResource ConvTimeSpanToStr}}" 
                               Style="{StaticResource TextBlockTitle}"/>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Setting Time: " Style="{StaticResource TextBlockTitle}" />
