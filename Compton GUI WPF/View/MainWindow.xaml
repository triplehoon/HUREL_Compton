                        <TextBlock Grid.Row="1" Grid.Column="0" Text="LACC Image Recon" Style="{StaticResource TextBlockTitle}" Margin="5" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                        <mah:ToggleSwitch Grid.Row="1" Grid.Column="1" Command="{Binding StartorStopSessionCommand}" IsOn="{Binding Path=IsSessionStart, Mode=OneWay}"/>
