<Application x:Class="HUREL_Imager_GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HUREL_Imager_GUI"
             xmlns:viewmodels="clr-namespace:HUREL_Imager_GUI.ViewModel"
             xmlns:views="clr-namespace:HUREL_Imager_GUI.Views"
             xmlns:controls ="clr-namespace:HUREL_Imager_GUI.Components"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Fonts.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:SettingViewModel}">
                <views:SettingView/>
            </DataTemplate>

 
        </ResourceDictionary>
    </Application.Resources>
</Application>
